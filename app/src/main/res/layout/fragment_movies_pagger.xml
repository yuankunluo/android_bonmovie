<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpagger_movies_pagger"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.PagerTabStrip
                android:id="@+id/pager_tab_strip"
                android:layout_gravity="top"
                android:paddingBottom="@dimen/pager_tab_strip_padding_bottom"
                android:paddingLeft="@dimen/pager_tab_strip_padding_left_right"
                android:paddingRight="@dimen/pager_tab_strip_padding_left_right"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tab_height"/>
        </android.support.v4.view.ViewPager>


</FrameLayout>