<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        style="@style/MovieDetailStyle"
        android:id="@+id/tv_video_name"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/bt_play_video"
        android:layout_height="wrap_content" />

    <TextView
        style="@style/MovieDetailStyle"
        android:id="@+id/tv_video_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_video_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_video_name"/>

    <TextView
        style="@style/MovieDetailStyle"
        android:id="@+id/tv_video_site"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_video_name"
        app:layout_constraintLeft_toRightOf="@id/tv_video_type"/>

    <ImageButton
        style="@style/MovieDetailStyle"
        android:id="@+id/bt_play_video"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="parent"
        android:contentDescription="@string/play_video"
        android:background="@drawable/ic_play_arrow_black_24px"
        android:layout_width="@dimen/movie_video_play_button_height"
        android:layout_height="@dimen/movie_video_play_button_width" />

</merge>